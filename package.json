{
  "name": "Monero_Simulator",
  "version": "1.0.0",
  "description": "Modular simulation environment for research on selfish mining countermeasures.",
  "type": "module",
  "main": "src/main.js",
  "scripts": {
    "start": "node src/main.js",
    "simple":    "DATA_MODE=simple LOG_MODE=''         node src/main.js",
    "full":      "DATA_MODE=full   LOG_MODE=''         node src/main.js",
    "sweep":     "DATA_MODE=simple LOG_MODE='' SIM_ROUNDS=sweep  node src/main.js",
    "log":       "DATA_MODE=full   LOG_MODE=info       node src/main.js",
    "log:probe": "DATA_MODE=full   LOG_MODE=info,probe node src/main.js",
    "log:stats": "DATA_MODE=full   LOG_MODE=info,stats node src/main.js",
    "lint": "eslint src/**/*.js"
  },
  "keywords": [
    "monero",
    "simulation",
    "PoW",
    "selfish mining"
  ],
  "author": "BawdyAnarchist",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.26.0",
    "eslint": "^9.26.0",
    "globals": "^16.1.0"
  },
  "dependencies": {
    "d3-random": "^3.0.1",
    "dotenv": "^16.6.1",
    "p-limit": "^7.1.1",
    "tinyqueue": "^3.0.0"
  }
}
